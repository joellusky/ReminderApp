<!-- Search Bar Functionality -->




<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Duedate</th>
      <th>Category</th>
      <th>Paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
    <% if bill.user_id == current_user.id %>
      <tr>
        <td><%= bill.name %></td>
        <td><%= bill.duedate %></td>
        <td><%= bill.category.name %></td>
          
         <% if bill.paid == true %>
          <td>Paid!</td>
            <%else%>
              <td> Not Paid! </td>
          <%end%>
            
        <td><%= link_to 'Show', bill %></td>
        <td><%= link_to bill, method: :delete do%>
           <span class="fa fa-trash-o"></span>
             <%end%>
        </td>
      </tr>

    <% end %>


      <% end %>
    
  </tbody>
</table>
<br>

<hr>
<div id="bills">
  <h2 id="month">
    <%= link_to "<", date: @date.prev_month %>
    <%= @date.strftime("%B %Y") %>
    <%= link_to ">", date: @date.next_month %>
  </h2>
  <%= calendar @date do |date| %>
    <%= date.day %>
    <% if @bills_by_date[date] %>
      <ul>
        <% @bills_by_date[date].each do |bill| %>
          <li><%= link_to bill.provider.name, bill %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</div>


