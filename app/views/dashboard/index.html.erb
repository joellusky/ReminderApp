<div align="center">
<h1>Welcome Back <%=current_user.first_name%></h1>

<button type="button" class="btn btn-default">
  <%= link_to "Show All Bills", bills_path %>
</button>

<button type="button" class="btn btn-default">
<%= link_to "Add a new bill", new_bill_path %>
</button>

<button type="button" class="btn btn-default">
<%= link_to "Add a new Reminder", new_reminder_path %>
</button>

</div>

<% if @current_bills %>
  <h3>Bills Due Today</h3>
<% else %>
  <h3>No Bills Due Today</h3>
<% end %>

<table class="table table-hover">

  <tbody>
    <% @bills.each do |bill| %>
    <tr>
        <td><%= bill.name %></td>
        <td><%= bill.duedate %></td>
        <td><%= bill.provider.name %></td> 
        <td><%= link_to "Pay Now", bill.provider.url %></td>
            <%= bill.paid %>
            <% if bill.paid == true%>
            <td> Paid! </td>
            <%else%>
            <td> Not Paid! </td>
            <%end%>
        <td><%= link_to 'Show', bill %></td>
        <td><%= link_to bill, method: :delete do%>
          <i class="fa fa-trash-o"></i>
          <% end %>
        </td>
       </tr>
  
      <% end %>
    
  </tbody>
</table>
<br>
<hr>
<br>
<%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %>

