<h1>My Profile</h1>

<%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %>

<script type="text/javascript" src="http://voap.weather.com/weather/oap/USGA0028?template=GENXV&par=3000000007&unit=0&key=twciweatherwidget"></script>

<table>
  <tbody>
    <% @bills.each do |bill| %>
    <% if (bill.user_id == current_user.id) && (bill.duedate == Date.current) %>
      <tr>
        <h1>Your bills due today</h1>
        <td><%= bill.name %></td>
        <td><%= bill.duedate %></td>
        <td><%= bill.category %></td>
        <td><%= bill.url %></td>
        <td><%= bill.paid %></td>
        <td><%= link_to 'Show', bill %></td>
        <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
        </tbody>
          </table>
      <% @current_bills = true %>
      
      <% else %>

      <% @current_bills = nil %>
      <% end %>
    <% end %>

    <% if @current_bills.nil? %>
    <h1>You dont have any bills due today :)</h1>
    <% end %>



<%= link_to "Add a new bill", new_bill_path %>