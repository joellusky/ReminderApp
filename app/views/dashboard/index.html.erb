<h1>My Profile</h1>

<%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %>

<script type="text/javascript" src="http://voap.weather.com/weather/oap/USGA0028?template=GENXV&par=3000000007&unit=0&key=twciweatherwidget"></script>

<% if @current_bills %>
  <h1>Your bills due today</h1>
<% else %>
  <h1>You have no bills :)</h1>
<% end %>

<table>

  <tbody>
    <% @bills.each do |bill| %>
    <tr>
        <td><%= bill.name %></td>
        <td><%= bill.duedate %></td>
        <td><%= bill.category %></td>
        <td><%= bill.url %></td>
        <td><%= bill.paid %></td>
        <td><%= link_to 'Show', bill %></td>
        <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  
      <% end %>
    
  </tbody>
</table>
<br>

<%= link_to "Add a new bill", new_bill_path %>