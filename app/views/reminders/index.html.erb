<h1>Listing reminders</h1>

<table>
  <thead>
    <tr>
      <th>Notes</th>
      <th>Alert</th>
      <th>Bill</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reminders.each do |reminder| %>
      <tr>
        <td><%= reminder.notes %></td>
        <td><%= reminder.alert %></td>
        <td><%= reminder.bill %></td>
        <td><%= link_to 'Show', reminder %></td>
        <td><%= link_to '', edit_reminder_path(reminder), class: "fa fa-pencil-square-o" %></td>
        <td><%= link_to reminder, method: :delete, data: { confirm: 'Are you sure?' } do%>
        <i class="fa fa-trash-o"></i>
          <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reminder', new_reminder_path %>
